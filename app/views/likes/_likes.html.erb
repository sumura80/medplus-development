<!-- showのlikeボタンの部分をrenderで対応するためのView -->
<% if post.like_user(current_user) %>
 <div id="like-button"

     >
  <%= link_to post_like_path(post.id, 1), method: :delete, remote: true do %>
<!-- remote trueを利用することでcontrollerの処理が終わったあとにjs.erbを起動させる。 -->
   <span class="fa fa-heart like-btn-unlike" id="like-btn-unlike" 
       <% if !user_signed_in? %>
        data-toggle="tooltip" data-placement="right" title="Please sign up to LIKE"
        <%end%>
        ></span>
  	<% end %>
  	<%= post.likes_count %>      
  </div>

<% else %>

  <div id="like-button">
    <%= link_to post_likes_path(post.id), method: :post, remote: true do %>
      <span class="fa fa-heart like-btn" 
        <% if !user_signed_in? %>
        data-toggle="tooltip" data-placement="right" title="Please sign up to LIKE"
      <%end%>
      ></span>
    <% end %>
    <%= post.likes_count %>
  </div>
  
<% end %>


