<div class="container">
  <div class="d-flex justify-content-center">
    <div class="card" style="margin: 30px 0px 45px 0px;  width: 500px;">
      <h4 class="card-header alert alert-warning">Forgot your password?</h4>
        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  				<%= devise_error_messages! %>

          <div class="form-group mb-4">
            <div class="input-group">
              <div class="input-group-prepend">
                <span class="input-group-text"><i class="far fa-envelope"></i></span>
              </div>
              <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-control", placeholder: "email" %>
            </div>
          </div>

          <div class="actions">
            <%= f.button "Send me reset password instructions",class:"btn btn-warning btn-block", data: {disable_with:  "<i class='fas fa-spinner fa-spin'></i>  Sending..." } %>
          </div>
        <% end %>



        <div class="login" style="border-top: 1px solid #808080; margin: 30px 0px 15px 0px; padding-top:20px;">
         <%= render "devise/shared/links" %>
        </div>

      </div><!-- end of card-body -->
    </div><!-- end of card -->
  </div><!-- end of dflex -->
</div><!-- end of container -->
